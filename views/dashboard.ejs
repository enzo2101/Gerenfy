        <tr class="bg-slate-300">
          <th class="border-2">Data</th>
          <th class="border-2">Valor</th>
          <th class="border-2">Tipo</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>

  <div class="bg-white rounded-md shadow-xl p-4 flex flex-col text-center relative">
    <h1 class="text-2xl font-bold">Saldo Atual:</h1>
    <h1 class="text-xl font-bold" id="saldo"></h1>
  </div>

  <script src="./assets/js/balance.js"></script>

