<%- include('./partials/header') %>

  <div id="tabela-container" class="bg-white rounded-md shadow-xl p-2 flex flex-col space-y-2">
    <h1 class="font-bold text-2xl ml-2">Dashboard</h1>
    <label for="filtroDias">Filtrar por dias:</label>
    <select class="border-2 rounded-lg bg-slate-300" id="filtroDias">
